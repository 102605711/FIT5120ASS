
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>waste collections</title>
    <meta name="viewport"
          content="initial-scale=1,maximum-scale=1,user-scalable=no" />
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.0.1/mapbox-gl.css"
          rel="stylesheet" />
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.0.1/mapbox-gl.js"></script>
    <link href="~/Content/mapboxGeocoder.css" rel="stylesheet" />
    <script src="~/Scripts/geojson.js"></script>
    <script src="~/Scripts/mapboxGeocoder.js"></script>
    <style>

        html,
        body {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        #map {
            position: absolute;
            height: 100%;
            width: 100%;
            overflow: hidden;
        }

        .left-panel {
            position: absolute;
            width: 300px;
            height: 100%;
            background: #fff;
            z-index: 2;
            padding: 20px;
            opacity: 0.8;
            overflow: hidden;
        }
    </style>
</head>

<body>
    <div id="map"></div>
    <script>
        const App = {
            init: function () {
                this.initMap();
                this.addControl();
            },
            initMap: function () {
                mapboxgl.accessToken =
                    "pk.eyJ1IjoibGh6Mzc2NjA0MjQ3IiwiYSI6ImNrbTBxbGxtMjF3eTMybnBsOG92eWpnYnkifQ.mnRxYYWHOJ644qlBlfFQZA";
                this.map = new mapboxgl.Map({
                    container: "map",
                    style: "mapbox://styles/mapbox/light-v10",
                    center: [144.952117, -37.815381],
                    zoom: 12,
                    pitch: 0,
                });

                this.map.on("load", () => {
                    this.map.addSource("Melbourne", {
                        type: "geojson",
                        data: geojson,
                    });
                    this.map.addLayer({
                        id: "mappp",
                        type: "fill",
                        source: "Melbourne",
                        layout: {},
                        paint: {
                            "fill-color": {
                                property: "value",
                                stops: [
                                    [100, "yellow"],
                                    [200, "skyblue"],
                                    [300, "#f9b744"],
                                    [400, "green"],
                                    [500, "red"],
                                ],
                            },
                            "fill-opacity": 0.5,
                        },
                    });
                });
                this.map.on("click", "mappp", (e) => {
                    if (this.popup) {
                        this.popup.remove();
                    }
                    const html = `
                  <div style="font-size:14px; padding: 0 5px">
                    <div>${e.features[0].properties.name}</div>
                    <div>${e.features[0].properties.day}</div>
                  </div>
                `;
                    this.popup = new mapboxgl.Popup({ closeButton: false });
                    this.popup.setLngLat(e.lngLat).setHTML(html).addTo(this.map);
                });
            },
            addControl() {
                this.map.addControl(
                    new MapboxGeocoder({
                        accessToken: mapboxgl.accessToken,
                        mapboxgl: mapboxgl,
                    })
                );
            },
        };
        App.init();
    </script>
</body>
</html>
